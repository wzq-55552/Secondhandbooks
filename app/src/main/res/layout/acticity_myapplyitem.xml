<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <android.support.v7.widget.Toolbar
            app:title="对方书籍"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:onClick="back"/>

        <RelativeLayout
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myapply_item_icon_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/head" />

            <TextView
                android:padding="3dp"
                android:id="@+id/myapply_item_usersname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/myapply_item_icon_image"
                android:text="对方用户名" />


            <TextView
                android:id="@+id/myapply_item__sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myapply_item_usersname"
                android:layout_alignStart="@+id/myapply_item_usersname"
                android:padding="3dp"
                android:text="对方性别" />

            <TextView
                android:textSize="17sp"
                android:id="@+id/myapply_item_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"
                android:text="已被同意申请" />


        </RelativeLayout>


        <LinearLayout
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书名："
                />

            <TextView
                android:id="@+id/myapply_item_bookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                />

            <TextView
                android:id="@+id/myapply_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点："
                />

            <TextView
                android:id="@+id/myapply_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注："
                />

            <TextView
                android:id="@+id/myapply_item_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片："
                />

            <ImageView
                android:id="@+id/myapply_item_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                />


        </LinearLayout>


        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="24dp"
            android:id="@+id/myapply_item_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="取消交换" />

            <Button
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="24dp"
                android:id="@+id/myapply_item_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:text="我的书籍" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>