<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            app:title="详情"
            android:id="@+id/myneedsitem_item_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            />

        <RelativeLayout
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myneeds_fragment_item_icon_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/head" />

            <TextView
                android:padding="3dp"
                android:id="@+id/myneeds_fragment_item_usersname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/myneeds_fragment_item_icon_image"
                android:text="对方用户名" />


            <TextView
                android:id="@+id/myneeds_fragment_item_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myneeds_fragment_item_usersname"
                android:layout_alignStart="@+id/myneeds_fragment_item_usersname"
                android:padding="3dp"
                android:text="对方性别" />



        </RelativeLayout>


        <LinearLayout
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书名："
                />

            <TextView
                android:id="@+id/myneeds_fragment_item_bookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注："
                />

            <TextView
                android:id="@+id/myneeds_fragment_item_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片："
                />

            <ImageView
                android:id="@+id/myneeds_fragment_item_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                />
        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myneeds_fragment_item_fab"
            android:src="@android:drawable/ic_menu_call"
            app:backgroundTint="@color/colorPrimary"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="48dp"
            />


    </LinearLayout>

</ScrollView>
