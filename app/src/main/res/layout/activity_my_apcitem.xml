<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <TextView
                android:id="@+id/apc_item_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="20sp"
                android:text="申请详情"/>

            <Button
                android:id="@+id/apc_item_back_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_launcher_background"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center|top">

            <RelativeLayout
                android:id="@+id/apc_item_upview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top">

                <TextView
                    android:id="@+id/apc_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请书名："
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/apc_item_input_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/apc_item_name"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/apc_item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/apc_item_name"
                    android:text="交换地点："
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/apc_item_input_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/apc_item_input_name"
                    android:layout_toRightOf="@+id/apc_item_location"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/apc_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/apc_item_location"
                    android:text="交换地点："
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/apc_item_input_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/apc_item_input_location"
                    android:layout_toRightOf="@+id/apc_item_time"
                    android:textSize="20dp"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/apc_item_upview"
                android:orientation="vertical"
                android:gravity="center|top">

                <TextView
                    android:id="@+id/apc_item_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="书籍图片" />

                <ImageView
                    android:id="@+id/apc_item_input_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/head"
                    android:adjustViewBounds="true"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="申请状态"/>

            <TextView
                android:id="@+id/apc_item_input_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/apc_item_state_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>

    </LinearLayout>
</ScrollView>