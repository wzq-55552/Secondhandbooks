<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myneeds_fragment_item_icon_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/head" />

        <TextView
            android:padding="3dp"
            android:id="@+id/myneeds_fragment_item_usersname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/myneeds_fragment_item_icon_image"
            android:text="对方用户名" />


        <TextView
            android:id="@+id/myneeds_fragment_item_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myneeds_fragment_item_usersname"
            android:layout_alignStart="@+id/myneeds_fragment_item_usersname"
            android:padding="3dp"
            android:text="对方性别" />



    </RelativeLayout>


    <LinearLayout
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书名："
            />

        <TextView
            android:id="@+id/myneeds_fragment_item_bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            />

        <TextView
            android:id="@+id/myneeds_fragment_item_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片："
            />

        <ImageView
            android:id="@+id/myneeds_fragment_item_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />
    </LinearLayout>

</LinearLayout>